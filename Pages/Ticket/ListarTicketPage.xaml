<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MauiFirebase.Helpers"
             x:Class="MauiFirebase.Pages.Ticket.ListarTicketPage"
             x:Name="TicketPage"
             Title="Tickets">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToEstadoConverter x:Key="EstadoConverter" />
            <converters:BoolToColorConverter x:Key="EstadoColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <ActivityIndicator 
                    IsRunning="{Binding IsBusy}" 
                    IsVisible="{Binding IsBusy}" 
                    Color="Gray" />

                <Label Text="Lista de colores"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Gray500}"
                       Margin="0,20,0,0" />

                <CollectionView ItemsSource="{Binding Tickets}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="12" Padding="12" Margin="0,8"
                               Background="{DynamicResource CardBackgroundBrush}"
                               BorderColor="Transparent"
                               HasShadow="False">
                                <Frame.Shadow>
                                    <Shadow Brush="Black" 
                                        Opacity="0.50" 
                                        Radius="10" 
                                        Offset="5,5" />
                                </Frame.Shadow>
                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                                    
                                    <Label Text="ðŸŽ¨" FontSize="25"
                                           Grid.RowSpan="2"
                                           VerticalOptions="Start"
                                           Margin="0,0,10,0" />

                                    <!-- ColorTicket y Estado -->
                                    <StackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="{Binding ColorTicket}"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="{DynamicResource Gray500}" />
                                        <Frame Padding="6,2"
                                               CornerRadius="12"
                                               HasShadow="False"
                                               BackgroundColor="{Binding EstadoTicket, Converter={StaticResource EstadoColorConverter}}"
                                               HorizontalOptions="Start">
                                            <Label Text="{Binding EstadoTicket, Converter={StaticResource EstadoConverter}}"
                                               TextColor="{DynamicResource Gray600}"
                                               FontSize="13"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                        </Frame>
                                    </StackLayout>

                                    <!-- BotÃ³n editar -->
                                    <ImageButton 
                                        Source="editicon.png"
                                        Scale="0.6"
                                        BackgroundColor="Transparent"
                                        Grid.Column="2"
                                        HeightRequest="20"
                                        WidthRequest="20"
                                        Command="{Binding Source={x:Reference TicketPage}, Path=BindingContext.EditTicketCommand}"
                                        CommandParameter="{Binding .}" />

                                    <!-- LÃ­nea divisoria -->
                                    <BoxView Grid.Row="1" Grid.ColumnSpan="3"
                                         HeightRequest="1"
                                         Background="#919191"
                                             Opacity="0.3"
                                         HorizontalOptions="Fill"
                                         Margin="14,0,14,0"  />

                                    <!-- Fecha -->
                                    <StackLayout Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,28,0,0" Spacing="2">
                                        <HorizontalStackLayout Spacing="6">
                                            <Image Source="{StaticResource IconFechaCreacion}"
                                               WidthRequest="18"
                                               HeightRequest="18"
                                               VerticalOptions="Center" />
                                            <Label Text="{Binding FechaRegistro, StringFormat='Fecha de CreaciÃ³n: {0:dd/MM/yyyy}'}"
                                               FontSize="13"
                                               TextColor="#4b5563"
                                               VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </StackLayout>



                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- BotÃ³n flotante -->
        <Button
            Text="+"
            Command="{Binding MostrarAgregarTicketCommand}"
            BackgroundColor="{DynamicResource Primary}"
            TextColor="White"
            FontSize="28"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,20,20,0" />
    </Grid>
</ContentPage>
