<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Premio.AgregarPremioPage"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Premios"
             x:DataType="viewModels:CrearPremioPageModel"
             Title="Agregar Premio">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Nuevo Premio" FontSize="24" FontAttributes="Bold" />

        <!-- Nombre del premio -->
        <Entry Placeholder="Nombre del premio"
               Text="{Binding NombrePremio}" />

        <!-- Descripci贸n del premio -->
        <Entry Placeholder="Descripci贸n"
               Text="{Binding DescripcionPremio}" />

        <!-- Puntos requeridos -->
        <Entry Placeholder="Puntos requeridos"
               Text="{Binding PuntosRequeridos}" Keyboard="Numeric" />

        <!-- Campo URL con bot贸n peque帽o a la derecha -->
        <HorizontalStackLayout Spacing="10">
            <Entry Placeholder="URL o seleccionar imagen"
           Text="{Binding FotoPremio}"
           HorizontalOptions="FillAndExpand" />

            <Button Text=""
            WidthRequest="40"
            HeightRequest="40"
            BackgroundColor="#0077CC"
            TextColor="White"
            FontSize="18"
            Command="{Binding SeleccionarImagenCommand}"
            VerticalOptions="Center"
            CornerRadius="20" />
        </HorizontalStackLayout>


        <!-- Vista previa de imagen -->
        <Image Source="{Binding FotoPremio}" 
               HeightRequest="150"
               Aspect="AspectFit"
               Margin="0,10,0,0" />

        <!-- Bot贸n Guardar -->
        <Button Text="Guardar"
                BackgroundColor="DarkBlue"
                TextColor="White"
                CornerRadius="30"
                Command="{Binding AddPremioCommand}" />

        <!-- Bot贸n Cancelar -->
        <Button Text="Cancelar"
                BackgroundColor="Gray"
                TextColor="White"
                CornerRadius="30"
                Clicked="OnCancelarClicked" />
    </VerticalStackLayout>
</ContentPage>
