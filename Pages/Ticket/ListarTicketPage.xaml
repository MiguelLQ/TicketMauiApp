<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MauiFirebase.Helpers"
             x:Class="MauiFirebase.Pages.Ticket.ListarTicketPage"
             x:Name="TicketPage"
             Title="Tickets">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToEstadoConverter x:Key="EstadoConverter" />
            <converters:BoolToColorConverter x:Key="EstadoColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <ActivityIndicator 
                    IsRunning="{Binding IsBusy}" 
                    IsVisible="{Binding IsBusy}" 
                    Color="Gray" />

                <Label Text="Lista de colores"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Gray500}"
                       Margin="0,20,0,0" />

                <CollectionView ItemsSource="{Binding Tickets}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="12" Padding="12" Margin="0,8"
                                   Background="{DynamicResource CardBackgroundBrush}"
                                   BorderColor="{DynamicResource CardBorderBrush}"
                                   HasShadow="True">

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                                    <!-- Emoji -->
                                    <Label Text="游꿛" FontSize="25"
                                           Grid.RowSpan="2"
                                           VerticalOptions="Start"
                                           Margin="0,0,10,0" />

                                    <!-- ColorTicket y Estado -->
                                    <StackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="{Binding ColorTicket}"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#0077CC" />
                                        <Frame Padding="6,2"
                                               CornerRadius="12"
                                               HasShadow="False"
                                               BackgroundColor="{Binding EstadoTicket, Converter={StaticResource EstadoColorConverter}}"
                                               HorizontalOptions="Start">
                                            <Label Text="{Binding EstadoTicket, Converter={StaticResource EstadoConverter}}"
                                                   TextColor="White"
                                                   FontSize="13"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Frame>
                                    </StackLayout>

                                    <!-- Bot칩n editar -->
                                    <ImageButton 
                                        Source="editarreal.png"
                                        Scale="0.7"
                                        BackgroundColor="Transparent"
                                        Grid.Column="2"
                                        HeightRequest="5"
                                        WidthRequest="5"
                                        Command="{Binding Source={x:Reference TicketPage}, Path=BindingContext.EditTicketCommand}"
                                        CommandParameter="{Binding .}" />

                                    <!-- L칤nea divisoria -->
                                    <BoxView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                             HeightRequest="1"
                                             BackgroundColor="{DynamicResource Primary}"
                                             HorizontalOptions="Fill"
                                             Margin="0,0,0,8" />

                                    <!-- Fecha -->
                                    <StackLayout Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,8,0,0" Spacing="2">
                                        <Label Text="{Binding FechaRegistro, StringFormat='Fecha de Creaci칩n: {0:dd/MM/yyyy}'}"
                                               FontSize="13"
                                               TextColor="{DynamicResource Gray500}" />
                                    </StackLayout>

                                    <!-- Ver m치s -->
                                    <Label Grid.Column="2" Grid.Row="2"
                                           Text="See more >"
                                           FontSize="13"
                                           TextColor="#D600AA"
                                           HorizontalOptions="End"
                                           Margin="0,8,0,0" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bot칩n flotante -->
        <Button
            Text="+"
            Command="{Binding MostrarAgregarTicketCommand}"
            BackgroundColor="{DynamicResource Primary}"
            TextColor="White"
            FontSize="28"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,20,20,0" />
    </Grid>
</ContentPage>
