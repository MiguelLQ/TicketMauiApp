<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Convertidores.EditarConvertidorPage"
             Title="Editar Convertidor">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- T칤tulo -->
            <Label Text="游댢 Editar Convertidor"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Valor M칤nimo -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Valor M칤nimo"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding ValorMin, Mode=TwoWay}"
                           Keyboard="Numeric"
                           FontSize="16"
                           Placeholder="Ej. 1"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Valor M치ximo -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Valor M치ximo"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding ValorMax, Mode=TwoWay}"
                           Keyboard="Numeric"
                           FontSize="16"
                           Placeholder="Ej. 100"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Tickets -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="N칰mero de Tickets"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding NumeroTicket, Mode=TwoWay}"
                           Keyboard="Numeric"
                           FontSize="16"
                           Placeholder="Ej. 5"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Estado del Convertidor -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Estado del Convertidor"
                       FontSize="14"
                       TextColor="#6B7280" />
                <Switch IsToggled="{Binding EstadoConvertidor}" />
            </VerticalStackLayout>

            <!-- Bot칩n Guardar -->
            <Button Text="Guardar"
                    Command="{Binding GuardarCambiosCommand}"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Bot칩n Cancelar -->
            <Button Text="Cancelar"
                    Clicked="OnCancelarClicked"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="Red"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
