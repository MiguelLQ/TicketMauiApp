<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.RegistroDeReciclaje.AgregarRegistroPage"
             xmlns:converter="clr-namespace:MauiFirebase.Helpers"
             Title="Registrar Reciclaje"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:NullToBoolConverter x:Key="NullToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- TÃ­tulo principal -->
                <Label Text="ðŸ“‹Registro de Reciclaje"
                       FontSize="26"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource Primary}" />

                <!-- Buscar DNI -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundBrush}"
                       BorderColor="{DynamicResource Primary}"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Buscar por DNI"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Primary}" />
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <Entry Grid.Column="0"
                                   Text="{Binding DniBuscado}"
                                   Placeholder="Ej: 12345678"
                                   Keyboard="Numeric"
                                   MaxLength="8"
                                   BackgroundColor="{DynamicResource SecondaryBackground}"
                                   HeightRequest="40"
                                   TextColor="{DynamicResource TextColor}" />
                            <Button Grid.Column="1"
                                    Text="Buscar"
                                    Command="{Binding BuscarPorDniCommand}"
                                    BackgroundColor="{DynamicResource Primary}"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HeightRequest="40"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Mostrar residente si fue encontrado -->
                <Frame IsVisible="{Binding ResidenteSeleccionado, Converter={StaticResource NullToBoolConverter}}"
                       BackgroundColor="{DynamicResource CardBackgroundBrush}"
                       BorderColor="{DynamicResource CardBorderBrush}"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="ðŸ‘¤ Residente encontrado"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="{DynamicResource Primary}" />
                        <Label Text="{Binding ResidenteSeleccionado.NombreResidente, StringFormat='Nombre: {0}'}"
                               TextColor="{DynamicResource TextColor}" />
                        <Label Text="{Binding ResidenteSeleccionado.ApellidoResidente, StringFormat='Apellido: {0}'}"
                               TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- SelecciÃ³n del tipo de residuo -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundBrush}"
                       BorderColor="{DynamicResource CardBorderBrush}"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="â™»ï¸ Tipo de Residuo"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource TextColor}" />
                        <Picker ItemsSource="{Binding ListaResiduos}"
                                ItemDisplayBinding="{Binding NombreResiduo}"
                                SelectedItem="{Binding ResiduoSeleccionado}"
                                Title="Seleccione un tipo"
                                TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Ingreso de peso -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundBrush}"
                       BorderColor="{DynamicResource CardBorderBrush}"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="âš–ï¸ Peso en kilogramos"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource TextColor}" />
                        <Entry Text="{Binding PesoKilogramo}"
                               Placeholder="Ej: 2.5"
                               Keyboard="Numeric"
                               BackgroundColor="{DynamicResource SecondaryBackground}"
                               TextColor="{DynamicResource TextColor}"
                               HeightRequest="40" 
                               TextChanged="PesoEntry_TextChanged"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Tickets ganados -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundBrush}"
                       BorderColor="{DynamicResource Primary}"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="ðŸŽŸï¸ Tickets Ganados"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Primary}" />
                        <Label Text="{Binding TicketsGanados}"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource Primary}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Botones -->
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Button Text="Registrar"
                            Command="{Binding AddRegistroCommand}"
                            BackgroundColor="{DynamicResource Primary}"
                            TextColor="White"
                            CornerRadius="20"
                            WidthRequest="140"
                            HeightRequest="50" />
                    <Button Text="Cancelar"
                            Clicked="OnCancelarClicked"
                            BackgroundColor="{DynamicResource Gray500}"
                            TextColor="White"
                            CornerRadius="20"
                            WidthRequest="140"
                            HeightRequest="50" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
