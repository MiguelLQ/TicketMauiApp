<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Residuo.AgregarResiduoPage"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Residuos"
             x:DataType="viewModels:CrearResiduoPageModel"
             Title="Agregar Residuo"
             >

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- TÃ­tulo centrado -->
            <Label Text="ðŸ§´ Nuevo Residuo"
                   FontSize="28"
                   FontAttributes="Bold"
                   
                   HorizontalOptions="Center" />

            <!-- Campo: Nombre del Residuo -->
            <Frame 
                     Background="{DynamicResource CardBackgroundBrush}"
                    BorderColor="{DynamicResource CardBorderBrush}"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Nombre del residuo"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding NombreResiduo}"
                           FontSize="16"
                           Placeholder="Ej. Botella de plÃ¡stico"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Campo: CategorÃ­a -->
            <Frame 
                Background="{DynamicResource CardBackgroundBrush}"
                BorderColor="{DynamicResource CardBorderBrush}"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="CategorÃ­a"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Picker Title="Seleccionar categorÃ­a"
                            FontSize="16"
                            TitleColor="#9CA3AF"
                            TextColor="{DynamicResource Gray500}"
                            ItemsSource="{Binding ListaCategorias}"
                            ItemDisplayBinding="{Binding NombreCategoria}"
                            SelectedItem="{Binding CategoriaResiduoSeleccionada}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Campo: Valor del Residuo -->
            <Frame 
               Background="{DynamicResource CardBackgroundBrush}"
                BorderColor="{DynamicResource CardBorderBrush}"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Valor (en soles)"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding ValorResiduo}"
                           FontSize="16"
                           Keyboard="Numeric"
                           Placeholder="Ej. 0.50"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- BotÃ³n Guardar -->
            <Button Text="Guardar"
                    Command="{Binding CrearResiduoCommand}"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25"
                     />

            <!-- BotÃ³n Cancelar -->
            <Button Text="Cancelar"
                    Clicked="OnCancelarClicked"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="red"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25"
                    />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
