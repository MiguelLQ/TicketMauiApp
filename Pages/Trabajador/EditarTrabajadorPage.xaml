<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MauiFirebase.PageModels.Trabajadores"
             x:Class="MauiFirebase.Pages.Trabajador.EditarTrabajadorPage"
             x:DataType="viewModel:EditarTrabajadorPageModel"
             Title="Editar Trabajador">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Editar Trabajador" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
            <Entry Placeholder="Nombre" Text="{Binding NombreTrabajador}" />
            <Entry Placeholder="Apellido" Text="{Binding ApellidoTrabajador}" />
            <Entry Placeholder="DNI" Text="{Binding DniTrabajador}" />
            <Entry Placeholder="Correo" Text="{Binding CorreoTrabajador}" />
            <Entry Placeholder="Telï¿½fono" Text="{Binding TelefonoTrabajador}" />
            <Entry Placeholder="ID Usuario" Keyboard="Numeric" Text="{Binding IdUsuario}" />
            <Switch IsToggled="{Binding EstadoTrabajador}" />
            <Button Text="Guardar Cambios" Command="{Binding EditarTrabajadorCommand}" />
            <Button Text="Cancelar" Clicked="OnVolverClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
