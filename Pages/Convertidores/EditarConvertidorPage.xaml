<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Convertidores.EditarConvertidorPage"
             Title="EditarConvertidorPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Editar Convertidor" FontSize="24" FontAttributes="Bold" />

        <Entry Placeholder="Valor Mínimo"
               Text="{Binding ValorMin, Mode=TwoWay}" 
               Keyboard="Numeric"/>

        <Entry Placeholder="Valor Máximo"
               Text="{Binding ValorMax, Mode=TwoWay}" 
               Keyboard="Numeric"/>

        <Entry Placeholder="Tickets"
               Text="{Binding NumeroTicket, Mode=TwoWay}" 
               Keyboard="Numeric"/>

        <Label Text="Estado del Convertidor" />
        <Switch IsToggled="{Binding EstadoConvertidor}" />

        <Button Text="Guardar"
                Command="{Binding GuardarCambiosCommand}"
                BackgroundColor="DarkBlue"
                TextColor="White"/>

        <Button Text="Cancelar"
                Clicked="OnCancelarClicked"
                BackgroundColor="Gray"
                TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>