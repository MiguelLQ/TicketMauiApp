<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MauiFirebase.Resources.Converters"
             xmlns:converterscolor="clr-namespace:MauiFirebase.Helpers"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Premios"
             x:Class="MauiFirebase.Pages.Premio.ListarPremioPage"
             x:Name="PremioPage"
             Title="Lista de Premios">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converterscolor:BoolToColorConverter x:Key="EstadoColorConverter" />
            <converters:BoolToEstadoConverter x:Key="BoolToEstadoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <!-- Título -->
                <Label Text="Lista de Premios"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Gray500}"
                       Margin="0,20,0,0" />

                <CollectionView ItemsSource="{Binding ListaPremios}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                                Background="{DynamicResource CardBackgroundBrush}"
                                BorderColor="{DynamicResource CardBorderBrush}"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,8"
                                HasShadow="True">

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">

                                    <!-- Imagen del premio -->
                                    <Image 
                                        Source="{Binding FotoPremio}"
                                        HeightRequest="150"
                                        WidthRequest="150"
                                        Grid.RowSpan="2"
                                        Margin="0,0,10,0"
                                        VerticalOptions="Start"
                                        Aspect="AspectFill">
                                        <Image.Triggers>
                                            <DataTrigger TargetType="Image" Binding="{Binding FotoPremio}" Value="">
                                                <Setter Property="Source" Value="placeholder.png" />
                                            </DataTrigger>
                                        </Image.Triggers>
                                    </Image>

                                    <!-- Información -->
                                    <StackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="{Binding NombrePremio}"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#0077CC" />

                                        <Frame
                                            Padding="6,2"
                                            CornerRadius="12"
                                            HasShadow="False"
                                            BackgroundColor="{Binding EstadoPremio, Converter={StaticResource EstadoColorConverter}}"
                                            HorizontalOptions="Start">
                                            <Label 
                                                Text="{Binding EstadoPremio, Converter={StaticResource BoolToEstadoConverter}}"
                                                TextColor="White"
                                                FontSize="13"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center" />
                                        </Frame>

                                        <Label Text="{Binding DescripcionPremio, StringFormat='Descripción: {0}'}"
                                               FontSize="13"
                                               TextColor="{DynamicResource Gray500}" />

                                        <Label Text="{Binding PuntosRequeridos, StringFormat='Puntos: {0}'}"
                                               FontSize="13"
                                               TextColor="{DynamicResource Gray500}" />
                                    </StackLayout>

                                    <!-- Botón Editar -->
                                    <ImageButton 
                                        Source="editarreal.png"
                                        HeightRequest="24"
                                        WidthRequest="24"
                                        BackgroundColor="Transparent"
                                        Grid.Column="2"
                                        Grid.Row="0"
                                        HorizontalOptions="End"
                                        VerticalOptions="Start"
                                        Margin="0"
                                        Padding="6"
                                        Command="{Binding Source={x:Reference PremioPage}, Path=BindingContext.IrAEditarPremioCommand}"
                                        CommandParameter="{Binding .}" />

                                    <!-- Línea divisoria -->
                                    <BoxView 
                                        Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                        HeightRequest="1"
                                        BackgroundColor="{DynamicResource Primary}"
                                        HorizontalOptions="Fill"
                                        Margin="0,8,0,8" />
                                    <!-- Ver más -->
                                    <Label 
                                        Grid.Row="2" Grid.Column="1"
                                        Text="See more >"
                                        FontSize="13"
                                        TextColor="#D600AA"
                                        HorizontalOptions="End"
                                        Margin="0,8,0,0" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Botón flotante -->
        <Button
            Text="+"
            Command="{Binding IrACrearPremioCommand}"
            BackgroundColor="{DynamicResource Primary}"
            TextColor="White"
            FontSize="28"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,20,20,0" />

        <!--=============================================CARGA LOADING=====================================================-->

        <Grid IsVisible="{Binding IsBusy}"
              BackgroundColor="#80000000"
              HorizontalOptions="Fill"
              VerticalOptions="Fill">
            <Frame Padding="20"
                   BackgroundColor="#222222DD"
                   CornerRadius="12"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   WidthRequest="160"
                   HeightRequest="120">
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">

                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       Color="White"
                                       WidthRequest="40"
                                       HeightRequest="40" />
                    <Label Text="Cargando..."
                           TextColor="White"
                           FontSize="16"
                           HorizontalOptions="Center"
                           FontAttributes="Bold" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
