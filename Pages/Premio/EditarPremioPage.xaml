<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Premio.EditarPremioPage"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Premios"
             x:DataType="viewModels:EditarPremioPageModel"
             Title="Editar Premio">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="{Binding TituloPagina}" FontSize="24" FontAttributes="Bold" />

        <!-- Nombre del premio -->
        <Entry Placeholder="Nombre del premio"
               Text="{Binding NombrePremio}" />

        <!-- Descripción del premio -->
        <Entry Placeholder="Descripción del premio"
               Text="{Binding DescripcionPremio}" />

        <!-- Puntos requeridos -->
        <Entry Placeholder="Puntos requeridos"
               Text="{Binding PuntosRequeridos}" 
               Keyboard="Numeric" />

        <!-- Campo de URL de imagen con botón lateral -->
        <HorizontalStackLayout Spacing="10">
            <Entry Placeholder="URL o seleccionar imagen"
                   Text="{Binding FotoPremio}"
                   HorizontalOptions="FillAndExpand" />

            <Button Text="📁"
                    WidthRequest="40"
                    HeightRequest="40"
                    FontSize="18"
                    BackgroundColor="#0077CC"
                    TextColor="White"
                    CornerRadius="20"
                    Command="{Binding SeleccionarImagenCommand}" />

        </HorizontalStackLayout>

        <!-- Vista previa de la imagen -->
        <Image Source="{Binding FotoPremio}"
               HeightRequest="150"
               Aspect="AspectFit"
               Margin="0,10,0,0" />

        <!-- Switch estado -->
        <VerticalStackLayout>
            <Label Text="¿Activo?" FontAttributes="Bold" TextColor="Black" />
            <Switch IsToggled="{Binding EstadoPremio}" />
        </VerticalStackLayout>

        <!-- Botón Guardar -->
        <Button Text="Guardar"
                Command="{Binding GuardarCambiosCommand}"
                BackgroundColor="DarkBlue"
                TextColor="White"
                CornerRadius="30" />

        <!-- Botón Cancelar -->
        <Button Text="Cancelar"
                Clicked="OnCancelarClicked"
                BackgroundColor="Gray"
                TextColor="White"
                CornerRadius="30" />
    </VerticalStackLayout>
</ContentPage>
