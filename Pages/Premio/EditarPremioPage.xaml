<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Premio.EditarPremioPage"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Premios"
             x:DataType="viewModels:EditarPremioPageModel"
             Title="Editar Premio">  
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="{Binding TituloPagina}" FontSize="24" FontAttributes="Bold" />

        <!-- Nombre del premio -->
        <Entry Placeholder="Nombre del residuo"
        Text="{Binding NombrePremio}" />

        <!-- Descripción del premio -->
        <Entry Placeholder="Nombre del residuo"
        Text="{Binding DescripcionPremio}" />

        <!-- Puntos requeridos -->
        <Entry Placeholder="Nombre del residuo"
        Text="{Binding PuntosRequeridos}" />

        <!-- Switch estado -->
        <VerticalStackLayout>
            <Label Text="¿Activo?" FontAttributes="Bold" TextColor="Black" />
            <Switch IsToggled="{Binding EstadoPremio}" />
        </VerticalStackLayout>

        <Button Text="Guardar"
        Command="{Binding GuardarCambiosCommand}"
        BackgroundColor="DarkBlue"
        TextColor="White"/>

        <Button Text="Cancelar"
        Clicked="OnCancelarClicked"
        BackgroundColor="Gray"
        TextColor="White" />
        
    </VerticalStackLayout>
</ContentPage>