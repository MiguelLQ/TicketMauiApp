<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Premio.ListarPremioPage"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Premios"
             x:Name="PremioPage"
             Title="ListarPremioPage">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Button Text="Agregar Premio" Command="{Binding IrACrearPremioCommand}" />

        <CollectionView ItemsSource="{Binding ListaPremios}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Label Text="{Binding NombrePremio}" FontAttributes="Bold" />
                            <Label Text="{Binding DescripcionPremio}" />
                            <Label Text="{Binding PuntosRequeridos, StringFormat='Puntos: {0}'}" />
                            <Label Text="{Binding EstadoPremio, StringFormat='Estado: {0}'}" />

                            <HorizontalStackLayout Spacing="10">
                                <Button Text="✏️ Editar" Command="{Binding Source={x:Reference PremioPage}, Path=BindingContext.IrAEditarPremioCommand}" CommandParameter="{Binding .}" />
                                <Button Text="Inhabilitar" Command="{Binding Source={x:Reference PremioPage}, Path=BindingContext.CambiarEstadoPremioCommand}" CommandParameter="{Binding IdPremio}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>