<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Convertidores.ListarConvertidorPage"
             xmlns:converters="clr-namespace:MauiFirebase.Resources.Converters"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Conversiones"
           
             Title="ListarConvertidorPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToEstadoConverter x:Key="BoolToEstadoConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Button Text="Agregar Convertidor"
                    Clicked="OnAgregarConvertidorClicked" />

            <CollectionView ItemsSource="{Binding ListaConvertidor}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray">
                            <VerticalStackLayout>
                                <Label Text="{Binding IdConvertidor, StringFormat='ID: {0}'}" FontAttributes="Bold"/>
                                <Label Text="{Binding ValorMin, StringFormat='Valor Mínimo: {0}'}"/>
                                <Label Text="{Binding ValorMax, StringFormat='Valor Máximo: {0}'}"/>
                                <Label Text="{Binding NumeroTicket, StringFormat='Ticket: {0}'}"/>
                                <Label Text="{Binding EstadoConvertidor, Converter={StaticResource BoolToEstadoConverter}, StringFormat='Estado: {0}'}"/>

                                <HorizontalStackLayout Spacing="10">
                                    <Button Text="✏️ Editar"
                                            Clicked="OnEditarConvertidorClicked"
                                            CommandParameter="{Binding .}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>