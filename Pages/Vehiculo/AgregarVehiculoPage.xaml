<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MauiFirebase.PageModels.Vehiculos"
             x:Class="MauiFirebase.Pages.Vehiculo.AgregarVehiculoPage"

             Title="Agregar Veh�culo">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Agregar Vehículo" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry Placeholder="Placa" Text="{Binding PlacaVehiculo}" />
            <Entry Placeholder="Marca" Text="{Binding MarcaVehiculo}" />
            <Entry Placeholder="Modelo" Text="{Binding ModeloVehiculo}" />

            <!-- Picker de Usuario o Trabajador -->
            <Label Text="Seleccione un usuario:" />
            <Picker Title="Seleccionar usuario"
                    ItemsSource="{Binding ListaUsuario}"
                    ItemDisplayBinding="{Binding Nombre}"
                    SelectedItem="{Binding UsuarioSeleccionado}" />
            <Label Text="Activo" />
            <Switch IsToggled="{Binding EstadoVehiculo}" />

            <Button Text="Guardar" Command="{Binding CrearVehiculoCommand}" />
            <Button Text="Cancelar" Clicked="OnVolverClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
