<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiFirebase.PageModels.Logins"
             x:Class="MauiFirebase.Pages.Login.LoginPage"
             x:DataType="vm:LoginPageModel"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#E3F2FD">

    <ScrollView>
        <Grid>
            <!-- Encabezado con logo y camión -->
            <VerticalStackLayout Padding="30,60,30,10" Spacing="12" HorizontalOptions="Center">
                <Image Source="logosanji.png" HeightRequest="100" SemanticProperties.Description="Logo Municipalidad San Jerónimo" />
                <Image Source="camion.png" HeightRequest="90" Aspect="AspectFit" SemanticProperties.Description="Camión recolector" />
            </VerticalStackLayout>

            <!-- Formulario blanco flotante -->
            <Frame BackgroundColor="White"
                   CornerRadius="40"
                   Margin="30,280,30,50"
                   Padding="28"
                   HasShadow="True"
                   HorizontalOptions="Fill"
                   VerticalOptions="Start">

                <VerticalStackLayout Spacing="20">

                    <!-- Correo -->
                    <Frame CornerRadius="10" Padding="8" BackgroundColor="White" HasShadow="False">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image Source="email_icon.png" HeightRequest="20" WidthRequest="20" />
                            <Entry Placeholder="Correo"
                                   Text="{Binding Email}"
                                   FontSize="15"
                                   PlaceholderColor="Gray"
                                   Keyboard="Email"
                                   TextColor="Black"
                                   AutomationId="emailEntry" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Contraseña -->
                    <Frame CornerRadius="10" Padding="8" BackgroundColor="White" HasShadow="False">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image Source="lock_icon.png" HeightRequest="20" WidthRequest="20" />
                            <Entry Placeholder="Contraseña"
                                   Text="{Binding Password}"
                                   IsPassword="True"
                                   FontSize="15"
                                   PlaceholderColor="Gray"
                                   TextColor="Black"
                                   AutomationId="passwordEntry" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Botón Login -->
                    <Button Text="INICIAR SESIÓN"
                            BackgroundColor="#1a2980"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="16"
                            HeightRequest="48"
                            CornerRadius="8"
                            Command="{Binding LoginCommand}"
                            AutomationId="loginButton" />

                    <!-- Mensaje de error -->
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontAttributes="Italic"
                           IsVisible="{Binding HasError}"
                           FontSize="13"
                           HorizontalOptions="Center" />

                    <!-- Enlace a registro -->
                    <Label HorizontalOptions="Center" FontSize="14" TextColor="Black">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="¿No tienes una cuenta? " />
                                <Span Text="Regístrate aquí"
                                      TextDecorations="Underline"
                                      TextColor="#00BFFF"
                                      FontAttributes="Bold">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding IrARegistroCommand}" />
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <!-- Social login -->
                    <Label Text="o inicia sesión con"
                           FontSize="13"
                           TextColor="#7b8ca5"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" Margin="0,0,0,0">
                        <ImageButton Source="facebook.png"
                                     HeightRequest="36"
                                     WidthRequest="36"
                                     BackgroundColor="Transparent"
                                     Clicked="FacebookClicked"
                                     SemanticProperties.Description="Iniciar sesión con Facebook" />
                        <ImageButton Source="google.png"
                                     HeightRequest="36"
                                     WidthRequest="36"
                                     BackgroundColor="Transparent"
                                     Clicked="GoogleClicked"
                                     SemanticProperties.Description="Iniciar sesión con Google" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
