<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Canje.ListarCanjePage"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Canjes"
             x:Name="CanjePage"
             Title="Listado de Canjes">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="Agregar Canje" Clicked="OnAgregarCanjeClicked" />

            <CollectionView ItemsSource="{Binding ListaCanjes}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray">
                            <VerticalStackLayout>
                                <Label Text="{Binding FechaCanje, StringFormat='Fecha: {0:dd/MM/yyyy}'}" FontAttributes="Bold" />
                                <Label Text="{Binding Residente.NombreResidente, StringFormat='Residente: {0}'}" />
                                <Label Text="{Binding Premio.NombrePremio, StringFormat='Premio: {0}'}" />
                                <Label Text="{Binding EstadoCanje, Converter={StaticResource BoolToEstadoConverter}, StringFormat='Estado: {0}'}" />

                                <HorizontalStackLayout Spacing="10">
                                    <Button Text="✏️ Editar" 
                                            Clicked="OnEditarCanjeClicked"
                                            CommandParameter="{Binding .}" />

                                    <Button Command="{Binding BindingContext.CambiarEstadoCanjeCommand, Source={x:Reference CanjePage}}"
                                            CommandParameter="{Binding IdCanje}">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding EstadoCanje}" Value="True">
                                                <Setter Property="Text" Value="Inhabilitar" />
                                                <Setter Property="BackgroundColor" Value="Red" />
                                                <Setter Property="TextColor" Value="White" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Button" Binding="{Binding EstadoCanje}" Value="False">
                                                <Setter Property="Text" Value="Habilitar" />
                                                <Setter Property="BackgroundColor" Value="Green" />
                                                <Setter Property="TextColor" Value="White" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
