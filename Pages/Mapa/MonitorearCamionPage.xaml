             x:Class="MauiFirebase.Pages.Mapa.MonitorearCamionPage"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             Title="MonitorearCamionPage">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">

        <maps:Map x:Name="map"
                  Grid.Row="1"
                  IsShowingUser="True"
