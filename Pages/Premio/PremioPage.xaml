<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="PremioContentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:MauiFirebase.Helpers"
    x:Class="MauiFirebase.Pages.Premio.PremioPage"
    Title="Premios">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToEstadoConverter x:Key="EstadoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="White">

            <Label Text="Registrar Premio"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <!-- Nombre del premio -->
            <VerticalStackLayout>
                <Label Text="Nombre" FontAttributes="Bold" TextColor="Black" />
                <Entry Placeholder="Ingrese el nombre"
                       Text="{Binding NombrePremio}"
                       TextColor="Black"
                       PlaceholderColor="Gray" />
            </VerticalStackLayout>

            <!-- Descripción del premio -->
            <VerticalStackLayout>
                <Label Text="Descripción" FontAttributes="Bold" TextColor="Black" />
                <Editor Placeholder="Ingrese descripción"
                        AutoSize="TextChanges"
                        Text="{Binding DescripcionPremio}"
                        TextColor="Black"
                        PlaceholderColor="Gray" />
            </VerticalStackLayout>

            <!-- Puntos requeridos -->
            <VerticalStackLayout>
                <Label Text="Puntos Requeridos" FontAttributes="Bold" TextColor="Black" />
                <Entry Placeholder="00"
                       Keyboard="Numeric"
                       Text="{Binding PuntosRequeridos}"
                       TextColor="Black"
                       PlaceholderColor="Gray" />
            </VerticalStackLayout>

            <!-- Switch estado -->
            <VerticalStackLayout>
                <Label Text="¿Activo?" FontAttributes="Bold" TextColor="Black" />
                <Switch IsToggled="{Binding EstadoPremio}" />
            </VerticalStackLayout>

            <!-- Botón Guardar -->
            <Button Text="Agregar premio"
                    Command="{Binding AddPremioCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White" />

            <!-- Lista de premios -->
            <Label Text="Premios Registrados"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,20,0,10" />

            <CollectionView ItemsSource="{Binding Premios}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray"
                               BackgroundColor="White"
                               CornerRadius="8"
                               Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding NombrePremio}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       TextColor="Black" />
                                <Label Text="{Binding DescripcionPremio}" 
                                       FontSize="14" 
                                       TextColor="Black" />
                                <Label Text="{Binding PuntosRequeridos, StringFormat='Puntos: {0}'}" 
                                       FontSize="14" 
                                       TextColor="Black" />
                                <Label Text="{Binding EstadoPremio, Converter={StaticResource EstadoConverter}}"
                                       FontSize="14"
                                       TextColor="Gray" />

                                <!-- Botón para cambiar estado -->
                                <Button Text="Cambiar Estado"
                                        Command="{Binding Source={x:Reference PremioContentPage}, Path=BindingContext.ChangeEstadoCommand}"
                                        CommandParameter="{Binding IdPremio}"
                                        BackgroundColor="#2196F3"
                                        TextColor="White"
                                        FontSize="12" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
