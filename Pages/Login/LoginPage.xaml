<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiFirebase.PageModels.Logins"
             x:Class="MauiFirebase.Pages.Login.LoginPage"
             x:DataType="vm:LoginPageModel"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#EAEFEF">
    <ScrollView>
        <Grid RowDefinitions="Auto,*">

            <!--  Logo y cami贸n -->
            <VerticalStackLayout Grid.Row="0"
                             Padding="5,60,30,10"
                             Spacing="12"
                             HorizontalOptions="Center">
                <Image Source="logosanji.png"
                   HeightRequest="100"
                   SemanticProperties.Description="Logo Municipalidad San Jer贸nimo" />
                <Image Source="camion.png"
                   HeightRequest="90"
                   Aspect="AspectFit"
                   SemanticProperties.Description="Cami贸n recolector" />
            </VerticalStackLayout>

            <!--  Formulario blanco flotante con bordes redondeados -->
            <Frame
               BackgroundColor="White"
                CornerRadius="30"
                BorderColor="Transparent"
                Margin="20,280,20,20"
                Padding="28"
                HasShadow="True"
                HorizontalOptions="Fill"
                VerticalOptions="Start">

                <ScrollView>
                    <VerticalStackLayout Spacing="20">

                        <!-- Correo -->
                        <Frame CornerRadius="30" Padding="10" BackgroundColor="White" HasShadow="False">
                            <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                                <Image Source="admi.png"
                                   HeightRequest="20"
                                   WidthRequest="20"
                                   VerticalOptions="Center"
                                   Margin="5"
                                   Grid.Column="0" />
                                <Entry Placeholder="Correo"
                                   FontSize="16"
                                   Keyboard="Email"
                                   TextColor="Black"
                                   BackgroundColor="Transparent"
                                   Text="{Binding Email}"
                                   Grid.Column="1" />
                            </Grid>
                        </Frame>


                        <!-- Contrase帽a -->
                        <Frame CornerRadius="30" Padding="10" BackgroundColor="White" HasShadow="False">
                            <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                                <Image Source="password.png"
                                   HeightRequest="20"
                                   WidthRequest="20"
                                   VerticalOptions="Center"
                                   Margin="5"
                                   Grid.Column="0" />
                                <Entry Placeholder="Contrase帽a"
                                   IsPassword="True"
                                   FontSize="16"
                                   TextColor="Black"
                                   BackgroundColor="Transparent"
                                   Text="{Binding Password}"
                                   Grid.Column="1" />
                            </Grid>
                        </Frame>

                        <!-- Bot贸n Login -->
                        <Button Text="INICIAR SESIN"
                            BackgroundColor="#1a2980"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="16"
                            HeightRequest="48"
                            CornerRadius="30"
                            Command="{Binding LoginCommand}"
                            AutomationId="loginButton" />

                        <!-- Mensaje de error -->
                        <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontAttributes="Italic"
                           IsVisible="{Binding HasError}"
                           FontSize="13"
                           HorizontalOptions="Center" />

                        <!-- Enlace a registro -->
                        <Label HorizontalOptions="Center" FontSize="14" TextColor="Black">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="驴No tienes una cuenta? "
                                      TextColor="Black" />
                                    <Span Text="Reg铆strate aqu铆"
                                      TextDecorations="Underline"
                                      TextColor="#1a2980"
                                      FontAttributes="Bold">
                                        <Span.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding IrARegistroCommand}" />
                                        </Span.GestureRecognizers>
                                    </Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <!-- Separador -->
                        <BoxView HeightRequest="1" Color="#B0C4DE" HorizontalOptions="Fill" />


                        <!-- Social login -->
                        <Label Text="o inicia sesi贸n con"
                           FontSize="13"
                           TextColor="#7b8ca5"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />

                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" Margin="0,0,0,10">
                            <ImageButton Source="facebook.png"
                                     HeightRequest="36"
                                     WidthRequest="36"
                                     BackgroundColor="Transparent"
                                     Clicked="FacebookClicked"
                                     SemanticProperties.Description="Iniciar sesi贸n con Facebook" />
                            <ImageButton Source="google.png"
                                     HeightRequest="36"
                                     WidthRequest="36"
                                     BackgroundColor="Transparent"
                                     Clicked="GoogleClicked"
                                     SemanticProperties.Description="Iniciar sesi贸n con Google" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </ScrollView>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
