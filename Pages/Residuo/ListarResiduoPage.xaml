<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Residuo.ListarResiduoPage"
             xmlns:converters="clr-namespace:MauiFirebase.Resources.Converters"
             xmlns:convertercolor="clr-namespace:MauiFirebase.Helpers"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Residuos"
             x:Name="ResiduoPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToEstadoConverter x:Key="BoolToEstadoConverter"/>
            <convertercolor:BoolToColorConverter x:Key="EstadoColorConverter" />
            <converters:BoolToEstadoConverter x:Key="EstadoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>




    <!-- Envolver todo en un Grid para permitir contenido + botÃ³n flotante -->
    <Grid>
        <!-- Contenido principal -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="10">
                <!--<Button Text="Agregar Residuo"
                        Clicked="OnAgregarResiduoClicked" />-->
                <Label Text="ðŸ—‘ï¸ Lista de Residuos"
                       FontSize="18"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Gray500}" />
                <CollectionView ItemsSource="{Binding ListaResiduos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                                Background="{DynamicResource CardBackgroundBrush}"
                                BorderColor="Transparent"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,8"
                                HasShadow="False">
                                <Frame.Shadow>
                                    <Shadow Brush="Black" 
                                        Opacity="0.50" 
                                        Radius="10" 
                                        Offset="5,5" />
                                </Frame.Shadow>
                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">

                                    <!-- Ãcono del residuo -->
                                    <!--<Image 
                                        Source="dotnet_bot.png" 
                                        HeightRequest="40"
                                        WidthRequest="40"
                                        Grid.RowSpan="2"
                                        Margin="0,0,10,0"
                                        VerticalOptions="Start" />-->
                                    <Label 
                                        Text="ðŸš®" 
                                        FontSize="26"
                                        Grid.RowSpan="2"
                                        VerticalOptions="Start"
                                        Margin="0,0,10,0" />

                                    <!-- Nombre y estado -->
                                    <StackLayout Grid.Column="1" Spacing="2">
                                        <Label 
                                            Text="{Binding NombreResiduo}" 
                                            FontAttributes="Bold" 
                                            FontSize="16"
                                            TextColor="{DynamicResource Gray500}" />

                                        <Frame
                                            Padding="6,2"
                                            CornerRadius="12"
                                            HasShadow="False"
                                            BackgroundColor="{Binding EstadoResiduo, Converter={StaticResource EstadoColorConverter}}"
                                            HorizontalOptions="Start">
                                            <Label 
                                                Text="{Binding EstadoResiduo, Converter={StaticResource EstadoConverter}}" 
                                                TextColor="{DynamicResource Gray600}"
                                                FontSize="13"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center" />
                                        </Frame>
                                    </StackLayout>

                                    <!-- BotÃ³n Editar a la derecha -->
                                    <Button
                                        
                                        ImageSource="editicon.png"
                                        Clicked="OnEditarResiduoClicked"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Transparent"
                                        TextColor="{DynamicResource Gray500}"
                                        Padding="0"
                                        Scale="0.6"
                                        ContentLayout="Left, 10"
                                        HeightRequest="30"
                                        WidthRequest="30"
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        HorizontalOptions="End"
                                        VerticalOptions="Start"/>


                                    <!-- LÃ­nea divisoria -->
                                    <BoxView 
                                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                        HeightRequest="1"
                                        BackgroundColor="#919191"
                                        Opacity="0.3"
                                        HorizontalOptions="Fill"
                                        Margin="8,8,8,8" />

                                    <!-- Datos adicionales -->
                                    <StackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Spacing="6">
                                        <HorizontalStackLayout Spacing="6">
                                            <Image Source="{StaticResource IconCategoria}" 
                                                   WidthRequest="18" HeightRequest="18"
                                                   VerticalOptions="Center" />
                                            <Label 
                                                Text="{Binding NombreCategoria, StringFormat='CategorÃ­a: {0}'}" 
                                                FontSize="13"
                                                TextColor="#4b5563"
                                                VerticalOptions="Center" />
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Spacing="6">
                                            <Image Source="{StaticResource IconValor}" 
                                                   WidthRequest="18" HeightRequest="18"
                                                   VerticalOptions="Center" />
                                            <Label 
                                                Text="{Binding ValorResiduo, StringFormat='Valor: {0}'}" 
                                                FontSize="13"
                                                TextColor="#4b5563"
                                                VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <ActivityIndicator 
             IsRunning="{Binding IsBusy}" 
             IsVisible="{Binding IsBusy}" 
             Color="DarkBlue" 
             VerticalOptions="Center" 
             HorizontalOptions="Center" />

        <!-- BotÃ³n flotante fijo arriba a la derecha -->
        <Button
            Text="+"
            Clicked="OnAgregarResiduoClicked"
            BackgroundColor="{DynamicResource Primary}"
            TextColor="White"
            FontSize="28"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,0,20,0"
            ZIndex="1" />

    </Grid>
</ContentPage>
