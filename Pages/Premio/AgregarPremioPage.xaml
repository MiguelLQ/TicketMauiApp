<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             x:Class="MauiFirebase.Pages.Premio.AgregarPremioPage"             xmlns:local="clr-namespace:MauiFirebase.Resources.Converters"             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Premios"             x:DataType="viewModels:CrearPremioPageModel"             Title="Agregar Premio"             BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#121212}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- T铆tulo centrado -->
            <Label Text=" Nuevo Premio"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Campo: Nombre del Premio -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Nombre del premio"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding NombrePremio}"
                           FontSize="16"
                           Placeholder="Ej. Mochila ecol贸gica"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                    <Label Text="{Binding NombrePremioError}"
                           TextColor="Red" FontSize="12"
                           IsVisible="{Binding HasNombrePremioError}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Campo: Descripci贸n -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Descripci贸n"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding DescripcionPremio}"
                           FontSize="16"
                           Placeholder="Ej. Mochila hecha de materiales reciclados"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                    <Label Text="{Binding DescripcionPremioError}"
                           TextColor="Red" FontSize="12"
                           IsVisible="{Binding HasDescripcionPremioError}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Campo: Puntos requeridos -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Puntos requeridos"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding PuntosRequeridos}"
                           FontSize="16"
                           Keyboard="Numeric"
                           Placeholder="Ej. 150"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                    <Label Text="{Binding PuntosRequeridosError}"
                           TextColor="Red" FontSize="12"
                           IsVisible="{Binding HasPuntosRequeridosError}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Imagen -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Seleccionar imagen"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Text="{Binding FotoPremio}"
                           FontSize="16"
                           Placeholder="Ruta de imagen"
                           PlaceholderColor="#9CA3AF"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                    <Button Text="Seleccionar imagen "
                            Command="{Binding SeleccionarImagenCommand}"
                            BackgroundColor="#0077CC"
                            TextColor="White"
                            CornerRadius="25"
                            FontSize="14" />
                    <Label Text="Debe seleccionar una imagen"
                           TextColor="Red"
                           FontSize="12"
                           IsVisible="{Binding HasFotoError}" />

                    <Image Source="{Binding FotoPremio}"
                           HeightRequest="150"
                           Margin="0,10,0,0"
                           Aspect="AspectFit" />
                </VerticalStackLayout>
            </Frame>

            <!-- Estado del premio -->
            <VerticalStackLayout Spacing="4">
                <Label Text="驴Activo?"
                       FontSize="14"
                       TextColor="#6B7280" />
                <Switch IsToggled="{Binding EstadoPremio}" />
            </VerticalStackLayout>

            <!-- Bot贸n Guardar -->
            <Button Text="Guardar"
                    Command="{Binding AddPremioCommand}"
                    IsEnabled="{Binding PuedeGuardar}"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="{Binding PuedeGuardar, Converter={StaticResource BoolToColorConverter}}"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Bot贸n Cancelar -->
            <Button Text="Cancelar"
                    Clicked="OnCancelarClicked"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="Red"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
