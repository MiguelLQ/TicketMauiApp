<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             x:Class="MauiFirebase.Pages.Premio.EditarPremioPage"             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Premios"             x:DataType="viewModels:EditarPremioPageModel"             Title="Editar Premio"             BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#121212}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <Label Text="✏️Editar Premio"
                   FontSize="26"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <!-- Nombre -->
            <Frame CornerRadius="12"
                   Padding="12"
                   Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Nombre del premio" FontSize="14" />
                    <Entry Placeholder="Nombre del premio"
                           Text="{Binding NombrePremio}"
                           FontSize="16"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Descripción -->
            <Frame CornerRadius="12"
                   Padding="12"
                   Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Descripción del premio" FontSize="14" />
                    <Entry Placeholder="Descripción del premio"
                           Text="{Binding DescripcionPremio}"
                           FontSize="16"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Puntos requeridos -->
            <Frame CornerRadius="12"
                   Padding="12"
                   Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Puntos requeridos" FontSize="14" />
                    <Entry Placeholder="Puntos requeridos"
                           Text="{Binding PuntosRequeridos}"
                           FontSize="16"
                           Keyboard="Numeric"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Imagen -->
            <Frame CornerRadius="12"
                   Padding="12"
                   Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="Transparent">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Imagen del premio" FontSize="14" />
                    <Entry Placeholder="Ruta de la imagen"
                           Text="{Binding FotoPremio}"
                           FontSize="16"
                           BackgroundColor="Transparent" />
                    <Button Text="Seleccionar imagen 📁"
                            Command="{Binding SeleccionarImagenCommand}"
                            BackgroundColor="#0077CC"
                            TextColor="White"
                            CornerRadius="25"
                            FontSize="14" />
                    <Image Source="{Binding FotoPremio}"
                           HeightRequest="150"
                           Margin="0,10,0,0"
                           Aspect="AspectFit" />
                </VerticalStackLayout>
            </Frame>

            <!-- Estado -->
            <VerticalStackLayout Spacing="4">
                <Label Text="¿Activo?" FontSize="14" />
                <Switch IsToggled="{Binding EstadoPremio}" />
            </VerticalStackLayout>

            <!-- Botones -->
            <Button Text="Guardar"
                    Command="{Binding GuardarCambiosCommand}"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="25"
                    HeightRequest="50" />

            <Button Text="Cancelar"
                    Clicked="OnCancelarClicked"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="25"
                    HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
