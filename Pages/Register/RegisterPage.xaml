<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Registers"
             x:Class="MauiFirebase.Pages.Register.RegisterPage"
             x:DataType="viewModels:RegisterPageModel"
             >

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" Background="{DynamicResource CardBackgroundBrush}">
            <Image Source="addus.png" WidthRequest="80" HeightRequest="80" BackgroundColor="Transparent" Margin="5" ></Image>

            <!-- Título -->
            <Label Text="Crear Cuenta"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}" />

            <!-- Correo -->
            <VerticalStackLayout>
                
                
                <Frame CornerRadius="12" Padding="0" Background="{DynamicResource EntryBackgroundBrush}" HasShadow="False" HeightRequest="50">
                    <HorizontalStackLayout>
                        <Label Text="📧" FontSize="20" Margin="10,0" VerticalOptions="Center" />
                        <Entry Placeholder="Correo electrónico"
                               Text="{Binding Email}"
                               Keyboard="Email"
                               FontSize="16"
                               TextColor="{StaticResource Gray500}"
                               BackgroundColor="Transparent"
                               PlaceholderColor="#999"
                               Margin="8,0" />
                    </HorizontalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Contraseña -->
            <VerticalStackLayout>
                <Frame CornerRadius="12" Padding="0" Background="{DynamicResource EntryBackgroundBrush}" HasShadow="False" HeightRequest="50">
                    <HorizontalStackLayout>
                        <Label Text="🔒" FontSize="20" Margin="10,0" VerticalOptions="Center" />
                        <Entry Placeholder="Contraseña"
                               Text="{Binding Password}"
                               IsPassword="True"
                               FontSize="16"
                               TextColor="{StaticResource Gray500}"
                               BackgroundColor="Transparent"
                               PlaceholderColor="#999"
                               Margin="8,0" />
                    </HorizontalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Confirmar contraseña -->
            <VerticalStackLayout>
                <Frame CornerRadius="12" Padding="0" Background="{DynamicResource EntryBackgroundBrush}" HasShadow="False" HeightRequest="50">
                    <HorizontalStackLayout>
                        <Label Text="🔒" FontSize="20" Margin="10,0" VerticalOptions="Center" />
                        <Entry Placeholder="Confirmar contraseña"
                               Text="{Binding ConfirmarPassword}"
                               IsPassword="True"
                               FontSize="16"
                               TextColor="{StaticResource Gray500}"
                               BackgroundColor="Transparent"
                               PlaceholderColor="#999"
                               Margin="8,0" />
                    </HorizontalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Botones en una sola fila -->
            <HorizontalStackLayout Spacing="16" Margin="0,10,0,0" HorizontalOptions="Center">
                <Button Text="Registrarse"
                        Command="{Binding RegistrarCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="8"
                        FontSize="16"
                        HeightRequest="50"
                        WidthRequest="150" />
                <Button Text="Cancelar"
                        Clicked="OnCancelarClicked"
                        BackgroundColor="#EEEEEE"
                        TextColor="#333333"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        FontSize="14"
                        HeightRequest="50"
                        WidthRequest="150" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
