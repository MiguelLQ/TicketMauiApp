<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MauiFirebase.Helpers"
             x:Class="MauiFirebase.Pages.CategoriaResiduo.CategoriaResiduoPage"
             Title="Categorías de Residuos"
             x:Name="CategoriaPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToEstadoConverter x:Key="EstadoConverter" />
            <converters:BoolToColorConverter x:Key="EstadoColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">


            <ActivityIndicator 
                IsRunning="{Binding IsBusy}" 
                IsVisible="{Binding IsBusy}" 
                Color="Gray" />

                <Label Text="Lista de Categorías" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="{DynamicResource Gray500}" 
                   Margin="0,20,0,0" />

                <CollectionView ItemsSource="{Binding Categorias}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                Background="{DynamicResource CardBackgroundBrush}"
                BorderColor="{DynamicResource CardBorderBrush}"
                CornerRadius="15"
                Padding="15"
                Margin="0,8"
                HasShadow="True">

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">

                                    <!-- Ícono izquierdo -->
                                    <!--<Image 
                                        Source="dotnet_bot.png" 
                                        HeightRequest="40"
                                        WidthRequest="40"
                                        Grid.RowSpan="2"
                                        Margin="0,0,10,0"
                                        VerticalOptions="Start" />-->
                                    <Label 
                                        Text="♻️" 
                                        FontSize="26"
                                        Grid.RowSpan="2"
                                        VerticalOptions="Start"
                                        Margin="0,0,10,0" />

                                    <!-- Nombre y Estado -->
                                    <StackLayout Grid.Column="1" Spacing="2">
                                        <Label 
                                            Text="{Binding NombreCategoria}" 
                                            FontAttributes="Bold" 
                                            FontSize="16"
                                            TextColor="#0077CC" />

                                        <Frame
                                            Padding="6,2"
                                            CornerRadius="12"
                                            HasShadow="False"
                                            BackgroundColor="{Binding EstadoCategoriaResiduo, Converter={StaticResource EstadoColorConverter}}"
                                            HorizontalOptions="Start">

                                            <Label 
                                                Text="{Binding EstadoCategoriaResiduo, Converter={StaticResource EstadoConverter}}" 
                                                TextColor="White"
                                                FontSize="13"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center" />
                                        </Frame>
                                    </StackLayout>

                                    <!-- Botón de edición (ícono pequeño) -->
                                    <ImageButton 
                                                Source="editarreal.png" 
                                                HeightRequest="5"
                                                WidthRequest="5"
                                                Scale="0.7"
                                                BackgroundColor="Transparent"
                                                Grid.Column="2"
                                                HorizontalOptions="End"
                                                VerticalOptions="Start"
                                                Margin="0"
                                                Command="{Binding Source={x:Reference CategoriaPage}, Path=BindingContext.EditCategoriaResiduoCommand}"
                        CommandParameter="{Binding .}"></ImageButton>

                                    <!-- Línea divisora -->
                                    <BoxView 
                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                        HeightRequest="1"
                        BackgroundColor="{DynamicResource Primary}"
                        HorizontalOptions="Fill"
                        Margin="0,0,0,8" />

                                    <!-- Datos adicionales -->
                                    <StackLayout Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,8,0,0" Spacing="2">
                                        
                            

                                        <Label 
                            Text="{Binding Ticket.ColorTicket, StringFormat='Color: {0}'}"
                            FontSize="13"
                            TextColor="{DynamicResource Gray500}" />
                                    </StackLayout>

                                    <!-- Acciones -->
                                    <HorizontalStackLayout 
                        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                        Spacing="10"
                        HorizontalOptions="Center"
                        Margin="0,8,0,0">

                                        <!-- Ver más -->
                                        <Label 
                                            Grid.Column="1" Grid.Row="2"
                                            Text="See more >"
                                            FontSize="13"
                                            TextColor="#D600AA"
                                            HorizontalOptions="End"
                                            Margin="180,8,0,0" />

                               
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


            </VerticalStackLayout>
    </ScrollView>
        <!-- Botón flotante fuera del ScrollView -->
        <Button
        Text="+"
        Command="{Binding MostrarAgregarCategoriaCommand}"
        BackgroundColor="{DynamicResource Primary}"
        TextColor="White"
        FontSize="28"
        WidthRequest="60"
        HeightRequest="60"
        CornerRadius="30"
        HorizontalOptions="End"
        VerticalOptions="Start"
        Margin="0,20,20,0"
        />


    </Grid>
</ContentPage>
