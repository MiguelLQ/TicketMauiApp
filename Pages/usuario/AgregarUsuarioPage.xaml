<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.usuario.AgregarUsuarioPage"
             xmlns:viewModel="clr-namespace:MauiFirebase.PageModels.Usuarios"
             x:DataType="viewModel:UsuarioPageModel"
             Title="Agregar Usuario">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- T칤tulo con 칤cono -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label Text="游녻"
                       FontSize="28"
                       VerticalOptions="Center" />
                <Label Text="Nuevo Usuario"
                       FontSize="28"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Campo: Nombre -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="{DynamicResource CardBorderBrush}"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Nombre"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Placeholder="Ingrese el nombre"
                           Text="{Binding UsuarioNuevo.Nombre}"
                           FontSize="16"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Campo: Correo -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="{DynamicResource CardBorderBrush}"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Correo"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Placeholder="Ingrese el correo"
                           Keyboard="Email"
                           Text="{Binding UsuarioNuevo.Correo}"
                           FontSize="16"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Campo: Contrase침a -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="{DynamicResource CardBorderBrush}"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Contrase침a"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Entry Placeholder="Ingrese una contrase침a"
                           IsPassword="True"
                           Text="{Binding UsuarioNuevo.Contrase침a}"
                           FontSize="16"
                           TextColor="{DynamicResource Gray500}"
                           BackgroundColor="Transparent" />
                </VerticalStackLayout>
            </Frame>

            <!-- Campo: Rol -->
            <Frame Background="{DynamicResource CardBackgroundBrush}"
                   BorderColor="{DynamicResource CardBorderBrush}"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Rol"
                           FontSize="14"
                           TextColor="#6B7280" />
                    <Picker 
                        Title="Selecciona un rol"
                        ItemsSource="{Binding RolesDisponibles}"
                        SelectedItem="{Binding UsuarioNuevo.Rol}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Bot칩n Guardar -->
            <Button Text="Guardar Usuario"
                    Command="{Binding GuardarUsuarioCommand}"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Bot칩n Cancelar -->
            <Button Text="Volver"
                    Clicked="OnVolverClicked"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="Gray"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
