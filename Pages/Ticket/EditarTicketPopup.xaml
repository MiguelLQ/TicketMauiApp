<toolkit:Popup 
    x:Class="MauiFirebase.Pages.Ticket.EditarTicketPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    >

    <AbsoluteLayout BackgroundColor="#80000000">

        <!-- Fondo oscuro clicable -->
        <BoxView AbsoluteLayout.LayoutBounds="0,0,1,1"
                 AbsoluteLayout.LayoutFlags="All"
                 BackgroundColor="Transparent">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="CerrarPopupAlTocarFondo"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Contenedor estilo BottomSheet -->
        <Frame
            BackgroundColor="White"
            Padding="20"
            CornerRadius="25"
            HasShadow="True"
            AbsoluteLayout.LayoutBounds="0,1,1,AutoSize"
            AbsoluteLayout.LayoutFlags="WidthProportional,PositionProportional">

            <VerticalStackLayout Spacing="15">
                <BoxView HeightRequest="4" WidthRequest="50"
                         CornerRadius="2" BackgroundColor="LightGray"
                         HorizontalOptions="Center" />

                <Label Text="Editar Ticket" FontSize="20" FontAttributes="Bold" />

                <Entry Placeholder="Color del Ticket" Text="{Binding ColorTicket}" />
                <Label Text="¿Está activo?" />
                <Switch IsToggled="{Binding EstadoTicket}" />

                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button 
                        Text="Guardar"
                        Command="{Binding GuardarEdicionTicketCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="120" />

                    <Button 
                        Text="Cancelar"
                        Clicked="OnCancelarClicked"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="120" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>
    </AbsoluteLayout>
</toolkit:Popup>
