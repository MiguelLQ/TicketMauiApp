<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Premio.PremioPage"
             Title="Premios">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="White">

            <Label Text="Registrar Premio"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <!-- Nombre del premio -->
            <VerticalStackLayout>
                <Label Text="Nombre" FontAttributes="Bold" TextColor="Black" />
                <Entry Placeholder="Ingrese el nombre"
                       Text="{Binding NombrePremio}"
                       TextColor="Black"
                       PlaceholderColor="Gray" />
            </VerticalStackLayout>

            <!-- Descripci贸n del premio -->
            <VerticalStackLayout>
                <Label Text="Descripci贸n" FontAttributes="Bold" TextColor="Black" />
                <Editor Placeholder="Ingrese descripci贸n"
                        AutoSize="TextChanges"
                        Text="{Binding DescripcionPremio}"
                        TextColor="Black"
                        PlaceholderColor="Gray" />
            </VerticalStackLayout>

            <!-- Puntos requeridos -->
            <VerticalStackLayout>
                <Label Text="Puntos Requeridos" FontAttributes="Bold" TextColor="Black" />
                <Entry Placeholder="00"
                       Keyboard="Numeric"
                       Text="{Binding PuntosRequeridos}"
                       TextColor="Black"
                       PlaceholderColor="Gray" />
            </VerticalStackLayout>

            <!-- Bot贸n Guardar -->
            <Button Text="Guardar"
                    Command="{Binding AddPremioCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White" />

            <!-- Lista de premios -->
            <Label Text="Premios Registrados"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,20,0,10" />

            <CollectionView ItemsSource="{Binding Premios}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray"
                               BackgroundColor="White"
                               CornerRadius="8"
                               Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding NombrePremio}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       TextColor="Black" />
                                <Label Text="{Binding DescripcionPremio}" 
                                       FontSize="14" 
                                       TextColor="Black" />
                                <Label Text="{Binding PuntosRequeridos, StringFormat='Puntos: {0}'}" 
                                       FontSize="14" 
                                       TextColor="Black" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
