<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.RegistroDeReciclaje.ListarRegistrosPage"
             x:Name="ListarPage"
             Title="Registros de Reciclaje">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Button Text="Registrar Nuevo Reciclaje"
                    Clicked="OnBuscarYAgregarClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White" />

            <Label Text="Lista de Registros" FontSize="18" FontAttributes="Bold" />

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <CollectionView ItemsSource="{Binding Registros}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding IdResidente, StringFormat='ID Residente: {0}'}" />
                                <Label Text="{Binding IdResiduo, StringFormat='ID Residuo: {0}'}" />
                                <Label Text="{Binding PesoKilogramo, StringFormat='Peso: {0} Kg'}" />
                                <Label Text="{Binding TicketsGanados, StringFormat='Tickets: {0}'}" />
                                <Label Text="{Binding FechaRegistro, StringFormat='Fecha: {0:dd/MM/yyyy HH:mm}'}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
