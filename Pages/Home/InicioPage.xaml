<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Home.InicioPage"
             >

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="HeaderOrange">#3949ab</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="0">

            <!--Encabezado con fondo naranja y tarjeta del coche -->

            <Grid HeightRequest="220">
                <!-- Fondo naranja superior -->
                <BoxView 
                    BackgroundColor="{StaticResource HeaderOrange}" 
                    HeightRequest="210" 
                    VerticalOptions="Start" />

                <!-- Frame superior (dentro del fondo naranja) -->
                <Frame
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="10"
                    WidthRequest="330"
                    HeightRequest="90"
                    CornerRadius="20"
                    HasShadow="True"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Margin="0,15,0,0">
                    <!-- Ajusta este margen para ubicarlo m치s arriba -->
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="游뚱 Veh칤culos activos"
                           FontSize="16"
                           VerticalOptions="Center"
                           TextColor="{DynamicResource Gray500}" />
                    </HorizontalStackLayout>
                </Frame>

                <!--Frame sobresalido (fuera del fondo naranja) -->
                <Frame
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="10"
                    WidthRequest="330"
                    HeightRequest="160"
                    CornerRadius="20"
                    HasShadow="True"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Margin="0,120,0,0">
                    <!-- Se superpone al fondo naranja -->

                    <Image Source="dotnet_bot.png" Aspect="AspectFit" />
                </Frame>
            </Grid>
            
            <!--Contenido existente (no modificado) -->
            <VerticalStackLayout Spacing="20" Padding="40">
                
                <!-- Tarjetas resumen en carrusel -->
                <CollectionView ItemsLayout="HorizontalList" HeightRequest="130" Margin="0,10"
                                ItemsSource="{Binding TarjetasResumen}">
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Background="{DynamicResource CardBackgroundBrush}"
                                   WidthRequest="140"
                                   CornerRadius="15"
                                   Margin="5"
                                   Padding="10"
                                   HasShadow="True">
                                <VerticalStackLayout HorizontalOptions="Center">
                                    <Label Text="{Binding Emoji}" FontSize="25" HorizontalOptions="Center"/>
                                    <Label Text="{Binding Valor}" FontSize="22" FontAttributes="Bold" TextColor="{DynamicResource Gray500}" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Titulo}" FontSize="14" TextColor="{DynamicResource Gray500}" HorizontalTextAlignment="Center"/>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Gr치fico" FontSize="19" FontAttributes="Bold" />
                <!-- Gr치fico de residuos reciclados -->
                <!-- Gr치fico de residuos reciclados -->
                <Frame HeightRequest="200" 
                       Background="{DynamicResource CardBackgroundBrush}"
                       CornerRadius="10"
                       Padding="15">
                    <Grid ColumnDefinitions="*, Auto">
                        <!-- Columna izquierda: Datos -->
                        <VerticalStackLayout VerticalOptions="Center" Spacing="5">
                            <Label Text="Total reciclado por categor칤a" FontSize="18" TextColor="{DynamicResource Gray500}" />
                            <Label Text="Pl치stico: 32 kg" FontSize="16" />
                            <Label Text="Org치nico: 25 kg" FontSize="16" />
                            <Label Text="Papel: 18 kg" FontSize="16" />
                        </VerticalStackLayout>

                        <!-- Columna derecha: 칈cono -->
                        <Image Grid.Column="1"
                           Source="grafico.png"  
                           WidthRequest="120"
                           HeightRequest="120"
                           HorizontalOptions="End"
                           VerticalOptions="Center" />
                    </Grid>
                </Frame>


                <!-- Registros recientes -->
                <Grid HeightRequest="44">
                    <Label Text="칔ltimos registros de reciclaje" FontSize="18" FontAttributes="Bold" VerticalOptions="Center"/>
                    <ImageButton 
                        Source="dotnet_bot.png" 
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent" />
                </Grid>

                <VerticalStackLayout Spacing="15">
                    <Frame CornerRadius="10" Padding="15" Background="{DynamicResource CardBackgroundBrush}" BorderColor="{DynamicResource CardBorderBrush}">
                        <Label Text="Ana recicl칩 4.5 kg de pl치stico" FontSize="16" TextColor="{DynamicResource Gray500}"/>
                    </Frame>
                    <Frame CornerRadius="10" Padding="15" Background="{DynamicResource CardBackgroundBrush}" BorderColor="{DynamicResource CardBorderBrush}">
                        <Label Text="Luis recicl칩 3 kg de papel" FontSize="16" TextColor="{DynamicResource Gray500}"/>
                    </Frame>
                    <Frame CornerRadius="10" Padding="15" Background="{DynamicResource CardBackgroundBrush}" BorderColor="{DynamicResource CardBorderBrush}">
                        <Label Text="Marta recicl칩 7.2 kg de vidrio" FontSize="16" TextColor="{DynamicResource Gray500}"/>
                    </Frame>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
