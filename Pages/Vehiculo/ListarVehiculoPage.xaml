<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Vehiculo.ListarVehiculoPage"
             Title="Veh�culos">
    <VerticalStackLayout>
        <Button Text="Agregar Veh�culo" Clicked="OnAgregarVehiculoClicked" />
        <CollectionView ItemsSource="{Binding ListaVehiculos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="Gray">
                        <VerticalStackLayout>
                            <Label Text="{Binding PlacaVehiculo}" FontAttributes="Bold" />
                            <Label Text="{Binding MarcaVehiculo}" />
                            <Label Text="{Binding ModeloVehiculo}" />
                            <Label Text="{Binding EstadoVehiculo, Converter={StaticResource BoolToEstadoConverter}}" />
                            <HorizontalStackLayout>
                                <Button Text="Editar" Clicked="OnEditarVehiculoClicked" CommandParameter="{Binding .}" />
                                <Button Text="Cambiar Estado" Clicked="OnCambiarEstadoVehiculoClicked" CommandParameter="{Binding IdVehiculo}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
