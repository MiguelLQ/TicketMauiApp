<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Home.InicioPage"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="HeaderOrange">#3949ab</Color>
            <Color x:Key="Headercolorsaludo">#4c59b2</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="0">

            <!--Encabezado con fondo naranja y tarjeta del coche -->
            <Grid>
                <!-- Fondo naranja superior -->
                <BoxView 
                    BackgroundColor="{StaticResource HeaderOrange}" 
                    HeightRequest="200" 
                    VerticalOptions="Start"
                    CornerRadius="0,0,30,30"/>

                <Frame
                    BackgroundColor="{StaticResource Headercolorsaludo}"
                    BorderColor="Transparent" 
                    Padding="15"
                    WidthRequest="330"
                    HeightRequest="90"
                    CornerRadius="20"
                    HasShadow="True"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Margin="0,15,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <!-- texto -->
                            <ColumnDefinition Width="1*" />
                            <!-- imagen -->
                        </Grid.ColumnDefinitions>

                        <!-- Columna 0: Texto (saludo y correo) -->
                        <VerticalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                            <Label Text="Hola, Bienvenido!"
                               FontSize="19"
                               TextColor="White"
                               FontAttributes="Bold"/>
                            <Label x:Name="CorreoUsuarioLabel"
                               FontSize="14"
                               TextColor="{DynamicResource Gray200}" />
                        </VerticalStackLayout>

                        <!-- Columna 1: Imagen -->
                        <Image
                            Grid.Column="1"
                            Source="camion.png"
                            WidthRequest="80"
                            HeightRequest="80"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Margin="0,0,10,0"
                            Aspect="AspectFit" />
                    </Grid>
                </Frame>

                <!-- 游늵 Gr치fico de pastel (ahora en lugar de veh칤culos) -->
               <!-- <Label Text="Gr치fico" FontSize="18" FontAttributes="Bold" />-->
                
                <Frame HeightRequest="250"
                       Padding="10"
                       HasShadow="True"
                       Background="{DynamicResource CardBackgroundBrush}"
                       CornerRadius="15"
                       BorderColor="Transparent"
                       Margin="0,120,0,0">
                    

                    <microcharts:ChartView 
                        Chart="{Binding GraficoPastel}" 
                        HeightRequest="220" 
                        WidthRequest="340"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />
                </Frame>
            </Grid>

            <!--Contenido existente (no modificado) -->
            <VerticalStackLayout Spacing="10" Padding="20">
                <Label Text="Registros" FontSize="18" FontAttributes="Bold" />

                <!-- Tarjetas resumen en carrusel -->
                <CollectionView ItemsLayout="HorizontalList" HeightRequest="130" 
                                ItemsSource="{Binding TarjetasResumen}">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Background="{DynamicResource CardBackgroundBrush}"
                                   BorderColor="Transparent"
                                   WidthRequest="150"
                                   CornerRadius="15"
                                   Margin="5"
                                   Padding="15"
                                   HasShadow="True">
                                <VerticalStackLayout HorizontalOptions="Center">
                                    <Label Text="{Binding Emoji}" FontSize="25" HorizontalOptions="Center"/>
                                    <Label Text="{Binding Valor}" FontSize="22" FontAttributes="Bold" TextColor="{DynamicResource Gray500}" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Titulo}" FontSize="14" TextColor="{DynamicResource Gray500}" HorizontalTextAlignment="Center"/>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                

                <!-- 游뚵 Veh칤culos con ruta para hoy (ahora en lugar del gr치fico) -->
                <Frame Background="{DynamicResource CardBackgroundBrush}"
                       BorderColor="Transparent"
                       Padding="12"
                       CornerRadius="20"
                       HasShadow="False"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       Margin="0,0,0,0">

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Veh칤culos con ruta para hoy"
                               FontAttributes="Bold"
                               FontSize="18"
                               HorizontalOptions="Center" />

                        <CollectionView ItemsSource="{Binding VehiculosHoy}"
                                        HorizontalOptions="Center">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="2" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Background="{StaticResource EntryBackgroundBrush}"
                                           CornerRadius="10"
                                           Padding="10"
                                           Margin="6"
                                           BorderColor="Transparent">

                                        <VerticalStackLayout Spacing="4">
                                            <Label Text="{Binding PlacaVehiculo, StringFormat='PLACA: {0}'}"
                                                   FontAttributes="Bold"
                                                   FontSize="13"
                                                   TextColor="{StaticResource Gray500}"
                                                   LineBreakMode="WordWrap" />

                                            <Label Text="{Binding MarcaVehiculo, StringFormat='Marca: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray500}"
                                                   LineBreakMode="WordWrap" />

                                            <Label Text="{Binding ModeloVehiculo, StringFormat='Modelo: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray500}"
                                                   LineBreakMode="WordWrap" />

                                            <Label Text="{Binding Nombre, StringFormat='Conductor: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray500}"
                                                   LineBreakMode="WordWrap" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Registros recientes -->
                <Grid HeightRequest="44">
                    <Label Text="鮫勇 Actividad reciente de reciclaje" FontSize="18" FontAttributes="Bold" VerticalOptions="Center"/>
                </Grid>

                <!-- Registros din치micos -->
                <CollectionView ItemsSource="{Binding UltimosRegistrosResumen}" Margin="0,10,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="2"
                                    Stroke="{Binding ColorBorde}"
                                    StrokeShape="RoundRectangle 10"
                                    BackgroundColor="Transparent"
                                    Padding="10"
                                    Margin="0,0,0,5">
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding Descripcion}" FontSize="16" TextColor="{Binding ColorTexto}" VerticalOptions="Start" />
                                </HorizontalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
