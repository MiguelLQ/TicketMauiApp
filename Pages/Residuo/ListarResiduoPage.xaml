<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebase.Pages.Residuo.ListarResiduoPage"
             xmlns:converters="clr-namespace:MauiFirebase.Resources.Converters"
             xmlns:convertercolor="clr-namespace:MauiFirebase.Helpers"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Residuos"
             x:Name="ResiduoPage"
             >

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToEstadoConverter x:Key="BoolToEstadoConverter"/>
            <convertercolor:BoolToColorConverter x:Key="EstadoColorConverter" />
            <converters:BoolToEstadoConverter x:Key="EstadoConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Envolver todo en un Grid para permitir contenido + botón flotante -->
    <Grid>
        <!-- Contenido principal -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="10">
                <!--<Button Text="Agregar Residuo"
                        Clicked="OnAgregarResiduoClicked" />-->
                <Label Text="Lista de Residuos"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Gray500}" />
                <CollectionView ItemsSource="{Binding ListaResiduos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                                Background="{DynamicResource CardBackgroundBrush}"
                                BorderColor="Transparent"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,8"
                                HasShadow="True">

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">

                                    <!-- Ícono del residuo -->
                                    <!--<Image 
                                        Source="dotnet_bot.png" 
                                        HeightRequest="40"
                                        WidthRequest="40"
                                        Grid.RowSpan="2"
                                        Margin="0,0,10,0"
                                        VerticalOptions="Start" />-->
                                    <Label 
                                        Text="🚮" 
                                        FontSize="26"
                                        Grid.RowSpan="2"
                                        VerticalOptions="Start"
                                        Margin="0,0,10,0" />

                                    <!-- Nombre y estado -->
                                    <StackLayout Grid.Column="1" Spacing="2">
                                        <Label 
                                            Text="{Binding NombreResiduo}" 
                                            FontAttributes="Bold" 
                                            FontSize="16"
                                            TextColor="#0077CC" />

                                        <Frame
                                            Padding="6,2"
                                            CornerRadius="12"
                                            HasShadow="False"
                                            BackgroundColor="{Binding EstadoResiduo, Converter={StaticResource EstadoColorConverter}}"
                                            HorizontalOptions="Start">
                                            <Label 
                                                Text="{Binding EstadoResiduo, Converter={StaticResource EstadoConverter}}" 
                                                TextColor="White"
                                                FontSize="13"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center" />
                                        </Frame>
                                    </StackLayout>

                                    <!-- Botón Editar a la derecha -->
                                    <Button
                                        
                                        ImageSource="editarreal.png"
                                        Clicked="OnEditarResiduoClicked"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Transparent"
                                        TextColor="{DynamicResource Gray500}"
                                        Padding="0"
                                        Scale="0.7"
                                        ContentLayout="Left, 10"
                                        HeightRequest="30"
                                        WidthRequest="30"
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        HorizontalOptions="End"
                                        VerticalOptions="Start"/>


                                        <!-- Línea divisoria -->
                                    <BoxView 
                                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                        HeightRequest="1"
                                        BackgroundColor="{DynamicResource Primary}"
                                        HorizontalOptions="Fill"
                                        Margin="0,8,0,8" />

                                    <!-- Datos adicionales -->
                                    <StackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Spacing="2">
                                        <Label 
                                            Text="{Binding NombreCategoria, StringFormat='Categoría: {0}'}" 
                                            FontSize="13"
                                            TextColor="{DynamicResource Gray500}" />

                                        <Label 
                                            Text="{Binding ValorResiduo, StringFormat='Valor: {0}'}" 
                                            FontSize="13"
                                            TextColor="{DynamicResource Gray500}" />
                                    </StackLayout>

                                    <!-- See more -->
                                    <Label 
                                        Grid.Row="3" Grid.Column="1"
                                        Text="See more >"
                                        FontSize="13"
                                        TextColor="#D600AA"
                                        HorizontalOptions="End"
                                        Margin="0,6,0,0" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Botón flotante fijo arriba a la derecha -->
        <Button
            Text="+"
            Clicked="OnAgregarResiduoClicked"
            BackgroundColor="{DynamicResource Primary}"
            TextColor="White"
            FontSize="28"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,0,20,0"
            ZIndex="1" />
    </Grid>
</ContentPage>
