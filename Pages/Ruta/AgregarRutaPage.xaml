<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:local="clr-namespace:MauiFirebase.Resources.Converters"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Rutas"
             x:Class="MauiFirebase.Pages.Ruta.AgregarRutaPage"
             x:DataType="viewModels:CrearRutaPageModel"
             Title="Agregar Ruta">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- Título -->
            <Label Text="🚛 Nueva Ruta"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Selector de Vehículo -->
            <Frame Background="{DynamicResource CardBackgroundBrush}" Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Vehículo" FontSize="14" TextColor="#6B7280" />
                    <Picker ItemsSource="{Binding ListaVehiculos}"
                            ItemDisplayBinding="{Binding Nombre}"
                            SelectedItem="{Binding VehiculoSeleccionado, Mode=TwoWay}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Días de Recolección -->
            <Frame Background="{DynamicResource CardBackgroundBrush}" Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Días de recolección" FontSize="14" TextColor="#6B7280" />
                    <Picker ItemsSource="{Binding DiasOpciones}"
                            SelectedItem="{Binding DiasDeRecoleccion, Mode=TwoWay}"
                            Title="Selecciona días de recolección"
                            FontSize="16"
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource Gray500}" />
                    <Label Text="{Binding DiasDeRecoleccionError}"
                           FontSize="12" TextColor="Red"
                           IsVisible="{Binding HasDiasDeRecoleccionError}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Puntos de Ruta -->
            <Frame Background="{DynamicResource CardBackgroundBrush}" Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Puntos de ruta (JSON)" FontSize="14" TextColor="#6B7280" />
                    <Editor Text="{Binding PuntosRutaJson, Mode=TwoWay}"
                            FontSize="16"
                            Placeholder="Puntos de la ruta en formato JSON"
                            PlaceholderColor="#9CA3AF"
                            TextColor="{DynamicResource Gray500}"
                            BackgroundColor="Transparent"
                            HeightRequest="100" />
                </VerticalStackLayout>
            </Frame>

            <!-- Estado Ruta -->
            <Frame Background="{DynamicResource CardBackgroundBrush}" Padding="16" CornerRadius="12">
                <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                    <Label Text="Ruta activa" FontSize="14" TextColor="#6B7280" VerticalOptions="Center" />
                    <Switch IsToggled="{Binding EstadoRuta, Mode=TwoWay}" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Mapa -->
            <Frame Background="{DynamicResource CardBackgroundBrush}" Padding="2" CornerRadius="1"
                   HeightRequest="500" WidthRequest="400">
                <Grid>

                    <!-- Mapa -->
                    <maps:Map x:Name="MyMap"
                              MapType="Satellite"
                              IsZoomEnabled="True"
                              IsScrollEnabled="True"
                              VerticalOptions="Fill"
                              HorizontalOptions="Fill" />

                    <!-- Botones de acción -->
                    <HorizontalStackLayout Spacing="10"
                                            VerticalOptions="Start"
                                            HorizontalOptions="Center"
                                            Padding="5"
                                            BackgroundColor="#AAFFFFFF"
                                            Margin="10">
                        <Button Text="Deshacer" Clicked="OnUndoClicked" />
                        <Button Text="Limpiar" Clicked="OnClearClicked" />
                        <Button Text="Exportar" Clicked="OnExportClicked" />
                    </HorizontalStackLayout>

                    <!-- Botones de movimiento -->
                    <Grid RowDefinitions="Auto,Auto,Auto"
                          ColumnDefinitions="Auto,Auto,Auto"
                          VerticalOptions="End"
                          HorizontalOptions="Start"
                          Margin="10"
                          BackgroundColor="#AAFFFFFF"
                          Padding="5">
                        <Button Text="↑" Grid.Row="0" Grid.Column="1" Clicked="OnMoveUpClicked" />
                        <Button Text="←" Grid.Row="1" Grid.Column="0" Clicked="OnMoveLeftClicked" />
                        <Button Text="→" Grid.Row="1" Grid.Column="2" Clicked="OnMoveRightClicked" />
                        <Button Text="↓" Grid.Row="2" Grid.Column="1" Clicked="OnMoveDownClicked" />
                    </Grid>

                </Grid>
            </Frame>

            <!-- Botón Guardar -->
            <Button Text="Guardar"
                    Command="{Binding CrearRutaCommand}"
                    FontSize="16"
                    FontAttributes="Bold"
                    IsEnabled="{Binding PuedeGuardar}"
                    BackgroundColor="{Binding PuedeGuardar, Converter={StaticResource BoolToColorConverter}}"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Botón Cancelar -->
            <Button Text="Cancelar"
                    Clicked="OnCancelarClicked"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="red"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
