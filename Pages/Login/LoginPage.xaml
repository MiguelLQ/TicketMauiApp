<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiFirebase.PageModels.Logins"
             x:Class="MauiFirebase.Pages.Login.LoginPage"
             x:DataType="vm:LoginPageModel"
             Shell.NavBarIsVisible="False">

    <!-- Fondo con gradiente azul-verde -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#92FE9D" Offset="0.0" />
            <GradientStop  Color="#01C9FF"  Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid Padding="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <VerticalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="Center">
                <Image Source="logosanji.png" HeightRequest="100" />
                <Label Text="Bienvenido"
                       FontSize="26"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <!-- Imagen del camión debajo del logo -->
                <Image Source="camion.png"
                       Aspect="AspectFit"
                       HeightRequest="100"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Formulario -->
            <VerticalStackLayout Grid.Row="1" Spacing="20" VerticalOptions="Center">

                <!-- Correo -->
                <Frame CornerRadius="10" Padding="10" BackgroundColor="White" HasShadow="False">
                    <Entry Placeholder="Correo"
                           BackgroundColor="Transparent"
                           FontSize="16"
                           Keyboard="Email"
                           Text="{Binding Email}" />
                </Frame>

                <!-- Contraseña -->
                <Frame CornerRadius="10" Padding="10" BackgroundColor="White" HasShadow="False">
                    <Entry Placeholder="Contraseña"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           FontSize="16"
                           Text="{Binding Password}" />
                </Frame>

                <!-- Botón Iniciar Sesión -->
                <Button Text="INICIAR SESIÓN"
                        BackgroundColor="#00BFFF"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"  
                        HeightRequest="50"
                        CornerRadius="10"
                        Command="{Binding LoginCommand}" />

                <!-- Mensaje de error -->
                <Label Text="{Binding ErrorMessage}"
                       TextColor="Red"
                       IsVisible="{Binding HasError}" />

                <!-- Registro -->
                <Label HorizontalOptions="Center" FontSize="14" TextColor="White">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="¿No tienes una cuenta? " />
                            <Span Text="Regístrate aquí"
                                  TextDecorations="Underline"
                                  TextColor="#00BFFF"
                                  FontAttributes="Bold">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IrARegistroCommand}" />
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!-- Línea divisoria -->
                <BoxView HeightRequest="1" Color="#B0C4DE" />

                <!-- Social login -->
                <Label Text="o inicia sesión con"
                       FontSize="14"
                       TextColor="White"
                       HorizontalOptions="Center" />

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                    <ImageButton Source="facebook.png"
                                 HeightRequest="40"
                                 WidthRequest="40"
                                 BackgroundColor="Transparent"
                                 Clicked="FacebookClicked" />
                    <ImageButton Source="google.png"
                                 HeightRequest="40"
                                 WidthRequest="40"
                                 BackgroundColor="Transparent"
                                 Clicked="GoogleClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
