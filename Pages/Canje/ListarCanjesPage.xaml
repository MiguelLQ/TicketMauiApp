<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MauiFirebase.Resources.Converters"
             xmlns:viewModels="clr-namespace:MauiFirebase.PageModels.Canjes"
             xmlns:converterscolor="clr-namespace:MauiFirebase.Helpers"
             x:Class="MauiFirebase.Pages.Canje.ListarCanjePage"
             x:Name="CanjePage"
             Title="Listado de Canjes">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converterscolor:BoolToColorConverter x:Key="EstadoColorConverter" />
            <converters:BoolToEstadoConverter x:Key="BoolToEstadoConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <!-- Título -->
                <Label Text="Lista de Canjes"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Gray500}"
                       Margin="0,20,0,0" />

                <CollectionView ItemsSource="{Binding ListaCanjes}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                                Background="{DynamicResource CardBackgroundBrush}"
                                BorderColor="Transparent"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,8"
                                HasShadow="True">

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">

                                    <!-- Ícono emoji -->
                                    <Label 
                                        Text="🎁"
                                        FontSize="25"
                                        Grid.RowSpan="2"
                                        VerticalOptions="Start"
                                        Margin="0,0,10,0" />

                                    <!-- Datos principales -->
                                    <StackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="{Binding NombreResidente, StringFormat='👤 {0}'}"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#0077CC" />
                                        <Frame
                                            Padding="6,2"
                                            CornerRadius="12"
                                            HasShadow="False"
                                            BackgroundColor="{Binding EstadoCanje, Converter={StaticResource EstadoColorConverter}}"
                                            HorizontalOptions="Start">
                                            <Label 
                                                Text="{Binding EstadoCanje, Converter={StaticResource BoolToEstadoConverter}}"
                                                TextColor="White"
                                                FontSize="13"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center" />
                                        </Frame>
                                        <Label Text="{Binding NombrePremio, StringFormat='Premio: {0}'}"
                                               FontSize="13"
                                               TextColor="{DynamicResource Gray500}" />

                                    </StackLayout>

                                    <!-- Botón Editar -->
                                    <!-- Botón Editar -->
                                    <Button
    
                                        ImageSource="editarreal.png"
                                        Clicked="OnEditarCanjeClicked"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Transparent"
                                        Padding="0"
                                        Scale="0.7"
                                        ContentLayout="Left, 10"
                                        HeightRequest="30"
                                        WidthRequest="30"
                                        Grid.Column="2"
                                        Grid.Row="0"
                                        HorizontalOptions="End"
                                         VerticalOptions="Start"/>


                                    <!-- Línea divisoria -->
                                    <BoxView 
                                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                        HeightRequest="1"
                                        BackgroundColor="{DynamicResource Primary}"
                                        HorizontalOptions="Fill"
                                        Margin="0,8,0,8" />

                                    <!-- Estado y botón Habilitar/Inhabilitar -->
                                    <StackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Spacing="2">
                                        <Label Text="{Binding FechaCanje, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                               FontSize="13"
                                               TextColor="{DynamicResource Gray500}" />
                                    </StackLayout>

                                    <!-- Ver más -->
                                    <Label 
                                        Grid.Row="3" Grid.Column="1"
                                        Text="See more >"
                                        FontSize="13"
                                        TextColor="#D600AA"
                                        HorizontalOptions="End"
                                        Margin="0,6,0,0" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Botón flotante -->
        <Button
            Text="+"
            Clicked="OnAgregarCanjeClicked"
            BackgroundColor="{DynamicResource Primary}"
            TextColor="White"
            FontSize="28"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,20,20,0"
            />
        <!--=============================================CARGA LOADING=====================================================-->
        <Grid IsVisible="{Binding IsBusy}"
              BackgroundColor="#80000000"
              HorizontalOptions="Fill"
              VerticalOptions="Fill">
            <Frame Padding="20"
                   BackgroundColor="#222222DD"
                   CornerRadius="12"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   WidthRequest="160"
                   HeightRequest="120">
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">

                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                       Color="White"
                       WidthRequest="40"
                       HeightRequest="40" />

                    <Label Text="Cargando..."
                           TextColor="White"
                           FontSize="16"
                           HorizontalOptions="Center"
                           FontAttributes="Bold" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
